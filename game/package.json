    "build:dev": "webpack --env NODE_ENV=dev --config webpack/webpack.client.js && webpack --env NODE_ENV=dev --config webpack/webpack.server.js && npm run server",
    "build:prod": "webpack --env NODE_ENV=prod --config webpack/webpack.client.js && webpack --env NODE_ENV=prod --config webpack/webpack.server.js && npm run server",
    "server": "nodemon -L dist/server/server.js",
    "watch:server": "webpack --watch --env NODE_ENV=dev --config webpack/webpack.server.js",
    "watch:client": "webpack --watch --env NODE_ENV=dev --config webpack/webpack.client.js",
    "startAll": "npm-run-all -p server watch:server watch:client"
  },
